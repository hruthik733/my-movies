{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "emulators": {
      "hosting": {
        "port": 5000,
        "host": "127.0.0.1"
      }
    }
  }
}
